<%= form_for @user do |f|%>
<table>
  <tr>
  <td><%= f.label :name%></td>
  <td><%= f.text_field :name%></td>
  </tr>
  <tr>
  <td><%= f.label :email%></td>
  <td><%= f.email_field :email%></td>
  </tr>
  <tr>
  <td><%= f.label :password%></td>
  <td><%= f.password_field :password%></td>
  </tr>
  <tr>
  <td><%= f.label :confirm_password%></td>
  <td><%= f.password_field :confirm_password%></td>
  </tr>
  <tr>
  <td><%= f.label :mobile%></td>
  <td><%= f.text_field :mobile%></td>
  </tr>
  <tr>
  <td><%= f.label :gender%></td>
  <td><%= f.select :gender,%w(female male)%>
  </tr>
    <tr>
  <td><%= f.submit "Save"%></td>
  </tr>
</table>
<%end%>

<%= link_to "<<back", users_path%>

